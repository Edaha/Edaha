{% extends "board/global/wrapper.html.twig" %}

{% block css %}
	<link rel="stylesheet" type="text/css" href="{{ kxEnv("paths:main:path") }}/public/css/txt_global.css" />
	{% for style in kxEnv("css:txtstyles") | split(":") %}
	  <link rel="{% if style != kxEnv("css:txtdefault") %}alternate {% endif %}stylesheet" type="text/css" href="{{ kxEnv("paths:main:path") }}/public/css/txt_{{ style }}.css" title="{{ style|capitalize }}" />
	{% endfor %}
	{% if locale == 'he' %}
	  {% verbatim %}
		<style type="text/css">
		  .thumb{
			float:right;
		  }
		</style>
	  {% endverbatim %}
	{% endif %}
	{{ parent() }}
{% endblock %}

{% use "board/text/txt_header.html.twig" %}

{% block boardcontent %}

{% include "board/text/txt_threadlist.html.twig" %}
{% include "board/text/post_box.html.twig" %}

{% for thread in posts %}
	{% for post in thread %}
		{% if post.post_parent == 0 %}
			<div class="border">
				<div class="thread">
				<a name="{{ post.post_id }}"></a>
		{% endif %}
		{% if post.post_parent == 0 %}
			{% if loop.parent.loop.last %}
							<span class="navlinks">
								<a href="#{{ loop.length - 1 }}">&uarr;</a>&nbsp;
								<a href="#0">&darr;</a>&nbsp;
								<a href="#menu">&#9632;</a>
							</span>
			{% else %}
							<span class="navlinks">
								<a href="#{{ loop.length - 1}}">&uarr;</a>&nbsp;
								<a href="#{{ loop.parent.loop.index }}">&darr;</a>&nbsp;
								<a href="#menu">&#9632;</a>
							</span>
			{% endif %}
		{% endif %}
		
		{% if post.post_parent == 0 %}
		<h2>
			<a href="res/{{ post.post_id }}.html">{{ post.post_subject }}</a>
			<span class="replies">({{ post.replies + loop.length - 1 }})</span></h2>
		{% endif %}
		
		{% if loop.parent.loop.index % 2 == 0 %}
			<div class="post even">
		{% else %}
			<div class="post odd">
		{% endif %}
		<h3>
		
			<span class="postnum">
			{% if post.post_parent == 0 %}
				<a href="javascript:quote(1, 'post{{ post.post_id }}');">1</a>
				<a href="{{ kxEnv("paths:boards:path") }}/{{ board.board_name }}/res/{{ post.post_id }}.html#1">.</a>
			{% else %}
				<a href="javascript:quote({{ 1 + post.replies + loop.index }}, 'post{{ post.post_id }}');">{{ 1 + post.replies + loop.index }}</a>
				<a href="{{ kxEnv("paths:boards:path") }}/{{ board.board_name }}/res/{{ post.post_parent }}.html#{{ 1 + post.replies + loop.index }}">.</a>
			{% endif %}
			</span>
			<span class="postinfo">
			Name: 
			<span class="postername">
			{% if post.post_email != '' and board.board_anonymous == 1 %}
				<a href="mailto:{{ post.post_email }}">
			{% endif %}
			{% if post.post_name == '' and post.post_tripcode == '' %}
				{{ board.board_anonymous }}
			{% elseif post.post_name == '' and post.post_tripcode != '' %}
			{% else %}
				{{ post.post_name }}
			{% endif %}
			{% if post.post_email != '' and board.board_anonymous != '' %}
			  </a>
			{% endif %}

			</span>
			{% if post.post_tripcode != '' %}
			  <span class="postertrip">!{{ post.post_tripcode }}</span>
			{% endif %}
			@ {{ post.timestamp_formatted }}
			{% if board.board_show_id %}
			  ID: {{ post.ipmd5|slice(0,5) }}
			{% endif %}
			<span id="dnb-{{ board.board_name }}-{{ post.post_id }}-{% if post.post_parent == 0 %}y{% else %}n{% endif %}"></span>
			<span class="id"></span>
			</span>
			</h3>
			<blockquote>
				{{ post.post_message }}
			</blockquote>
			</div>
			{% if loop.last %}
				<form name="post{% if post.post_parent == 0 %}{{ post.post_id }}{% else %}{{ post.post_parent }}{% endif %}" id="post{% if post.post_parent == 0 %}{{ post.post_id }}{% else %}{{ post.post_parent }}{% endif %}" action="{{ kxEnv("paths:script:path") }}/index.php?app=core&module=post&section=post" method="post" {% if board.board_enablecaptcha == 1 %}onsubmit="return checkcaptcha('post{% if post.post_parent == 0 %}{{ post.post_id }}{% else %}{{ post.post_parent }}{% endif %}');"{% endif %}>
				<input type="hidden" name="board" value="{{ board.board_name }}" />
				<input type="hidden" name="replythread" value="{% if post.post_parent == 0 %}{{ post.post_id }}{% else %}{{ post.post_parent }}{% endif %}" />
				<input name="email" size="25" value="" style="display: none;" />
				<table class="postform">
				<tr>
					{% if board.board_forcedanon != 1 %}
						<td class="label">
							<label>Name:</label>
						</td>
						<td>
							<input name="name" size="25" maxlength="75" />
						</td>
					{% endif %}
					<td class="label">
						<label>Email:</label>
					</td>
					<td>
						<input name="em" size="25" maxlength="75" />
					</td>
					{% if board.board_forcedanon != 1 %}
						<td>
							<input type="submit" name="submit" value="Reply" class="submit" />
							<a href="#" onclick="toggleOptions('{% if post.post_parent == 0 %}{{ post.post_id }}{% else %}{{ post.post_parent }}{% endif %}', 'post{% if post.post_parent == 0 %}{{ post.post_id }}{% else %}{{ post.post_parent }}{% endif %}', '{{ board.board_name }}');return false;">More...</a>
						</td>
					</tr>
					<tr>
					{% endif %} 

					{% if board.board_enablecaptcha == 1 %}
						<td class="label"><label for="captcha">Captcha:</label></td>
						<td>
							<a href="#" onclick="javascript:document.getElementById('captchaimage').src = '{{ kxEnv("paths:script:path") }}/captcha.php?' + Math.random();return false;">
							<img id="captchaimage" src="{{ kxEnv("paths:script:path") }}/captcha.php" border="0" width="90" height="30" alt="Captcha image" />
							</a>&nbsp;
							<input type="text" id="captcha" name="captcha" size="8" maxlength="6" />
						</td>
					{% endif %}
					{% if (board.board_forcedanon == 1 and board.board_enablecaptcha != 1) or board.board_forcedanon != 1 %}
						<td class="label">
							<label>Password:</label>
						</td>
						<td>
							<input type="password" name="postpassword" size="8" accesskey="p" maxlength="75" />
						</td>
					{% endif %} 
					{% if board.board_forcedanon == 1 %}
						<td>
							<input type="submit" name="submit" value="Reply" class="submit" />
							<a href="#" onclick="toggleOptions('{% if post.post_parent == 0 %}{{ post.post_id }}{% else %}{{ post.post_parent }}{% endif %}', 'post{% if post.post_parent == 0 %}{{ post.post_id }}{% else %}{{ post.post_parent }}{% endif %}', '{{ board.board_name }}');return false;">More...</a>
						</td>
						{% if board.board_enablecaptcha == 1 %}
						</tr>
							<tr>
								<td class="label">
									<label>Password:</label>
								</td>
								<td>
									<input type="password" name="postpassword" size="8" accesskey="p" maxlength="75" />
								</td>
						{% endif %}
					{% endif %}
				</tr>
				<tr style="display: none;" id="opt{% if post.post_parent == 0 %}{{ post.post_id }}{% else %}{{ post.post_parent }}{% endif %}"><td></td></tr>
				<tr>
					<td class="postfieldleft">
						<span class="postnum">
							{{ post.replies + 2 }}
						</span>
					</td>
					<td colspan="4">
						<textarea name="message" rows="8" cols="64"></textarea>
					</td>
				</tr>
			</table>
			<div id="preview{% if post.post_parent == 0 %}{{ post.post_id }}{% else %}{{ post.post_parent }}{% endif %}"></div>
				</form>
				<script type="text/javascript"><!--
					set_inputs('post{% if post.post_parent == 0 %}{{ post.post_id }}{% else %}{{ post.post_parent }}{% endif %}');
				//--></script>
				</div></div>
			{% endif %}
	{% endfor %}

{% endfor %}

{% endblock boardcontent %}
